
<h1>Listing Riders</h1>

<%= link_to 'New Rider', new_rider_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Tokens</th>
    <th>Address</th>
    <th></th>
  </tr>

  <% @riders.each do |rider| %>
    <tr>
      <td><%= rider.name %></td>
      <td><%= rider.phone %></td>
      <td><%= rider.email %></td>
      <td><%= rider.tokens %></td>
      <td><%= rider.address %></td>
      <td><%= link_to 'Show', riders_path(rider) %></td>
      <td><%= link_to 'Edit', edit_rider_path(rider) %></td>
      <td><%= link_to 'Destroy', rider_path(rider),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', welcome_index_path %>
